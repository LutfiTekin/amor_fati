{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "first_card_url", "second_card_url", "third_card_url", "fourth_card_url",
    "first_card_quote", "second_card_quote", "third_card_quote", "fourth_card_quote",
    "card_influence_summary", "reading_story", "future_holds",
    "metaphor_image_url", "metaphor_image_quote"
  ],
  "properties": {
    "first_card_url": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
    "second_card_url": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
    "third_card_url": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
    "fourth_card_url": { "type": "string", "pattern": "^[A-Z0-9_]+$" },

    "first_card_quote": { "type": "string", "minLength": 10, "maxLength": 100 },
    "second_card_quote": { "type": "string", "minLength": 10, "maxLength": 100 },
    "third_card_quote": { "type": "string", "minLength": 10, "maxLength": 100 },
    "fourth_card_quote": { "type": "string", "minLength": 10, "maxLength": 100 },

    "card_influence_summary": { "type": "string", "minLength": 20, "maxLength": 200 },
    "reading_story": { "type": "string", "minLength": 50, "maxLength": 1000 },

    "future_holds": {
      "type": "array",
      "minItems": 1,
      "maxItems": 9,
      "items": { "type": "string", "minLength": 5, "maxLength": 100 }
    },

    "metaphor_image_url": { "type": "string", "const": "METAPHOR_IMAGE" },
    "metaphor_image_quote": { "type": "string", "minLength": 10, "maxLength": 100 }
  },
  "additionalProperties": false
}

